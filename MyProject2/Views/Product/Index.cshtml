@model List<Product>;
@{
    ViewData["Title"] = "list of products";
}


<div class="container">
    <form method="get">
        <input type="Text" id="searchid" name="search" />

    <button type="submit">Search</button>
    </form>
    <a asp-controller="Product" asp-action="add" class="btn btn-success">New Item</a>
    <div class="row">
        <div class="col-5">
            <table class="table table-striped table-bordered">
                <thead class="">
                 <tr>
                <th>ProductId</th>
                <th>ProductName</th>
                <th>ProductDescription</th>
                <th>ProductPrice</th>
                <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.Price</td>
                            <td>
                                <a  asp-controller="Product" asp-route-id="@item.ProductId" asp-action="Edit" class="btn btn-success">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
